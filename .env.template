# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: DeepSeek API Base URL (default: https://api.deepseek.com)
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Optional: Model Configuration
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=8192
DEEPSEEK_TEMPERATURE=0

# Optional: Analysis Settings
MAX_FILE_SIZE=1000000  # Maximum file size in bytes (1MB)
ANALYSIS_TIMEOUT=300   # Analysis timeout in seconds (5 minutes)

# Optional: Visualization Settings
PLOT_DPI=300
PLOT_STYLE=seaborn
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8

# Optional: Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)
CACHE_DATABASE_PATH=.langchain.db  # SQLite database path for LangChain cache

# Optional: AI Analysis Concurrency Settings
DEEPSEEK_MAX_CONCURRENT_REQUESTS=20  # Maximum concurrent API requests (recommended: 4-20)
DEEPSEEK_REQUEST_DELAY=0.1          # Delay between requests in seconds (recommended: 0.05-0.2)
MIN_COMMUNITY_SIZE_FOR_AI=5         # Minimum community size to analyze with AI (recommended: 2-5)

# Optional: Community Naming Settings
ENABLE_MEANINGFUL_COMMUNITY_NAMES=true  # Enable meaningful community names
USE_DEEPSEEK_NAMING=true                # Use DeepSeek API for intelligent naming (true/false)
COMMUNITY_NAME_LANGUAGE=zh              # Language for names (zh/en/auto)
COMMUNITY_NAME_STYLE=descriptive        # Naming style (descriptive/technical/simple)

# Optional: Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s